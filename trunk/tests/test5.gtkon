#!/usr/bin/env gtkaml
# This is a simple test of GtkON application
Window $Test using=Gtk {
	VBox {
		Label $msg label="Do it for fun";
		Button !expand label="CLICK ME" clicked={
			if (msg.label == "byebye!")
				Gtk.main_quit ();
			msg.label = "<>&byebye!";
		};
	}
	gtkaml:preconstruct { -{
		print ("Hello World!\n");
		resize (400, 300);
		position = WindowPosition.CENTER;
	}- }
	-{gtkaml::gtk::main}-
}
