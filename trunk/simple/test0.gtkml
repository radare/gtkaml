/* Fuck yeah example */

VBox gtkml:root gtkaml:name=MyVBox homogeneous=false spacing=0 {

	gtkaml:preconstruct {
		-{ message ("root preconstruct code"); }-
	}

	VBox homogeneous=true spacing=0 {
		HBox homogeneous=true spacing=0 {
			Label label=One gtkaml:public=label;
			Button label=Two clicked="clicked()";
			Label label=Tri gtkaml:public=label2;
		}
		Entry;
	}

	-{
		static void clicked () {
			message("clicked!\n");
		}   

		static void main (string[] args) {
			Gtk.init (ref args);
			var w = new Gtk.Window (WindowType.TOPLEVEL);
			w.add (new MyVBox ());
			w.destroy.connect (Gtk.main_quit);
			w.show_all (); 
			Gtk.main (); 
		}
	}-
}
